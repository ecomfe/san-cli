{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "license": "MIT",
    "engines": {
        "node": ">=8.16"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/ecomfe/san-cli"
    },
    "site": "https://ecomfe.github.io/san-cli",
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/preset-env": "^7.4.5",
        "@commitlint/cli": "^8.3.4",
        "@commitlint/core": "^8.3.4",
        "@ecomfe/eslint-config": "^3.2.0",
        "@ksky521/cz-emoji": "^1.2.1",
        "babel-eslint": "^10.1.0",
        "commitizen": "^4.0.3",
        "commitlint-config-gitmoji": "1.0.1",
        "eslint": "^6.8.0",
        "eslint-plugin-babel": "^5.3.0",
        "eslint-plugin-jest": "^23.8.2",
        "husky": "^4.0.0",
        "jest": "^24.8.0",
        "lint-staged": "^9.2.5",
        "memfs": "^3.0.1",
        "stylelint": "^12.0.0"
    },
    "lint-staged": {
        "!(example|dist|output|__mocks__)/**/*.js": "eslint"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && yarn test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "scripts": {
        "commit": "git-cz",
        "doc": "cd docs && node ../packages/san-cli/index.js docit .",
        "build:doc": "cd docs && node ../packages/san-cli/index.js docit . --output",
        "lint": "eslint --ignore-path .eslintignore ./",
        "test": "node scripts/test.js"
    },
    "commitlint": {
        "extends": [
            "gitmoji"
        ],
        "rules": {
            "header-max-length": [
                2,
                "always",
                120
            ],
            "subject-case": [
                0,
                "always",
                "sentence-case"
            ]
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/@ksky521/cz-emoji"
        },
        "@ksky521/cz-emoji": {
            "types": [
                {
                    "emoji": "üåü",
                    "code": ":sparkles:",
                    "description": "Introducing new features.",
                    "name": "feat"
                },
                {
                    "emoji": "üêõ",
                    "code": ":bug:",
                    "description": "Fixing a bug.",
                    "name": "fix"
                },
                {
                    "emoji": "üöë",
                    "code": ":ambulance:",
                    "description": "Critical hotfix.",
                    "name": "quickfix"
                },
                {
                    "emoji": "‚úÖ",
                    "code": ":white_check_mark:",
                    "description": "Adding tests.",
                    "name": "test"
                },
                {
                    "emoji": "üí¨",
                    "code": ":speech_balloon:",
                    "description": "Updating text and literals.",
                    "name": "chore"
                },
                {
                    "emoji": "üì¶",
                    "code": ":package:",
                    "description": "Releasing / Version tags.",
                    "name": "release"
                },
                {
